# SUPER Platform Environment Variables

# Environment
SUPER_ENV=development
DEBUG=1

# Database
DATABASE_URL=postgres://super_user:super_password@localhost:5432/super_db

# Redis
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0

# Storage
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_BUCKET_NAME=super-media
MINIO_USE_SSL=false

# External Services
OSRM_URL=http://localhost:5000

# UPI Provider (Configure with real provider)
UPI_PROVIDER=demo
UPI_VPA_PLATFORM=super@demo
UPI_WEBHOOK_SECRET=demo_webhook_secret_123
UPI_BASE_URL=https://api.upiprovider.com

# Maps & Location
GOOGLE_MAPS_API_KEY=your_google_maps_key
MAPBOX_ACCESS_TOKEN=your_mapbox_token

# Porter Integration
PORTER_API_KEY=your_porter_api_key
PORTER_BASE_URL=https://pfe-apigw-uat.porter.in

# Notifications
FCM_SERVER_KEY=your_fcm_server_key
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token
TWILIO_FROM_NUMBER=+1234567890

# Email
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=1
EMAIL_HOST_USER=your_email@gmail.com
EMAIL_HOST_PASSWORD=your_app_password

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# JWT
JWT_ACCESS_TOKEN_LIFETIME=15
JWT_REFRESH_TOKEN_LIFETIME=1440

# Rate Limiting
RATE_LIMIT_DEFAULT=100/hour
RATE_LIMIT_LOGIN=10/minute

# Logging
LOG_LEVEL=INFO
SENTRY_DSN=https://your-sentry-dsn

# CORS (Frontend URLs)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002

# Webhook URLs (for external providers)
WEBHOOK_BASE_URL=https://yourdomain.com

# Regional Settings
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,hi,te,ta,bn,mr,gu

# Business Settings
DEFAULT_CURRENCY=INR
DEFAULT_TIMEZONE=Asia/Kolkata
PLATFORM_FEE_PERCENTAGE=2.5
GST_RATE=18.0

# Testing
TEST_UPI_SUCCESS_VPA=success@paytm
TEST_UPI_FAILURE_VPA=failure@paytm